<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_resenia"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/fondo_card_resenia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            android:src="@drawable/fondo_card"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="386dp"
            android:layout_height="46dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="9dp"
            tools:layout_editor_absoluteY="15dp"
            tools:ignore="MissingConstraints">

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="30dp"
                android:rating="5"
                android:theme="@style/ratingBarNormal" />

            <TextView
                android:id="@+id/exp_gral"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:theme="@style/textEditSub2"
                android:layout_marginStart="-50dp"
                android:layout_marginTop="-5dp"
                android:gravity="center"
                android:text="@string/title_exp_gral" />


            <TextView
                android:id="@+id/cond_animal"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:theme="@style/textEditSub2"
                android:layout_marginStart="0dp"
                android:layout_marginTop="-5dp"
                android:gravity="center"
                android:text="@string/title_cond_animal" />

            <TextView
                android:id="@+id/com_duenio"
                android:layout_width="125dp"
                android:layout_height="30dp"
                android:theme="@style/textEditSub2"
                android:layout_marginStart="15dp"
                android:layout_marginTop="-5dp"
                android:gravity="center"
                android:text="@string/title_com_duenio" />

            <LinearLayout
                android:layout_width="377dp"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:layout_marginStart="-375dp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/com_duenio"
                app:layout_editor_absoluteX="5dp">

                <TextView
                    android:id="@+id/val_exp_gral"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:theme="@style/textEditSub2"
                    android:layout_marginStart="45dp"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/val_cond_pets"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:theme="@style/textEditSub2"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/val_com_duenio"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:theme="@style/textEditSub2"
                    android:layout_weight="1"
                    android:text="TextView"  />

            </LinearLayout>



        </LinearLayout>



        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="375dp"
            android:layout_height="150dp"
            android:layout_marginStart="-15dp"
            android:layout_marginEnd="-15dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="60dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/resenia_text"
                style="@style/Base.CardView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="TextView" />




        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
