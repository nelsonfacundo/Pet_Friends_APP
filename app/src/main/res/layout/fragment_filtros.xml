<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_filtros"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:id="@+id/txt_filtros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="221dp"
        android:text="Filtros avanzados"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/guideline3"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/txt_filtros" />

    <TextView
        android:id="@+id/txt_filtros_animal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="331dp"
        android:text="Animal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chips_animal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="281dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/txt_filtros_animal"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_perro"
            style="@style/chipFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perro"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_gato"
            style="@style/chipFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gato"
            android:textSize="11sp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_ave"
            style="@style/chipFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ave"
            android:textSize="11sp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_tortuga"
            style="@style/chipFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tortuga"
            android:textSize="11sp" />

    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/txt_filtros_edad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="331dp"
        android:text="Edad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/chips_animal" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chips_edad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="263dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/txt_filtros_edad"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_edad_1"
            style="@style/chipFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0-3 meses"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_edad_2"
            style="@style/chipFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3-6 mesess"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_edad_3"
            style="@style/chipFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6-12 mesess"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_edad_4"
            style="@style/chipFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1-3 años" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_edad_5"
            style="@style/chipFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3-6 años"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_edad_6"
            style="@style/chipFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6-9 años" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_edad_7"
            style="@style/chipFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Más de 9 años" />

    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/txt_filtros_sexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="331dp"
        android:text="Sexo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/chips_edad" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chips_sexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="263dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/txt_filtros_sexo"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_hembra"
            style="@style/chipFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hembra" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_macho"
            style="@style/chipFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Macho" />

    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/txt_ubicacion_filtros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="331dp"
        android:text="Ubicación"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/chips_sexo" />

    <Button
        android:id="@+id/btn_aplicar_filtros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Aplicar"
        style="@style/colorBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_ubicacion_filtros" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>