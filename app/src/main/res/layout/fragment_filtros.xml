<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_filtros"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_bottom_sheet">


    <TextView
        android:id="@+id/txt_filtros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="221dp"
        android:text="@string/txt_filtros"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/guideline3"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/txt_filtros" />

    <TextView
        android:id="@+id/txt_filtros_animal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="331dp"
        android:text="@string/txt_animal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chips_especie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="281dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/txt_filtros_animal"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_perro"
            style="@style/chipFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_perro"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_gato"
            style="@style/chipFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_gato"
            android:textSize="11sp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_ave"
            style="@style/chipFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_ave"
            android:textSize="11sp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_tortuga"
            style="@style/chipFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_tortuga"
            android:textSize="11sp" />

    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/txt_filtros_edad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="331dp"
        android:text="@string/txt_edad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/chips_especie" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chips_edad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="263dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/txt_filtros_edad"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_edad_1_3"
            style="@style/chipFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_edad_1_3" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_edad_3_6"
            style="@style/chipFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_edad_3_6" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_edad_6_9"
            style="@style/chipFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_edad_6_9" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_edad_mas_9"
            style="@style/chipFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_edad_mas_9" />

    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/txt_filtros_sexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="331dp"
        android:text="@string/txt_sexo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/chips_edad" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chips_sexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="263dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/txt_filtros_sexo"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_hembra"
            style="@style/chipFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_hembra" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_macho"
            style="@style/chipFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_macho" />

    </com.google.android.material.chip.ChipGroup>

    <Button
        android:id="@+id/btn_aplicar_filtros"
        style="@style/colorBtnVerde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="@string/txt_aplicar_filtros"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/chips_sexo" />

    <Button
        android:id="@+id/btn_limpiar_filtros"
        style="@style/colorBtnVerde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:text="@string/txt_limpiar_filtros"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chips_sexo" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="4dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="530dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_begin="188dp"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>