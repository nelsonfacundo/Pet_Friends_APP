<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PetFriendsAPP" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/primary</item>
         <item name="colorAccent">@color/accent</item>

    </style>

    <style name="Theme.PetFriendsAPP" parent="Base.Theme.PetFriendsAPP" />

    <style name="textViewEdit">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="textViewEditTitle" parent="textViewEdit">
        <item name="android:textSize">26sp</item>
    </style>
    <style name="inputsTextEdit" parent="textViewEdit">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="textEditSub" parent="inputsTextEdit">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="colorBtn" parent="inputsTextEdit">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/accent</item>
        <item name="android:radius">5dp</item>

    </style>

    <style name="profileImageRound">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:clipToOutline" tools:targetApi="s">true</item>
        <item name="android:scaleType">centerCrop</item> <!-- Escala y recorta la imagen -->
        <item name="android:background">@drawable/round_background_profile</item> <!-- Fondo redondeado -->
    </style>
</resources>